#!/bin/bash

# Requires 2 Go Packages
# $ go get github.com/yuya-takeyama/percentile
# $ go get github.com/yuya-takeyama/ntimes

# Confirm we have something to test
if [[ -z "$1" ]]; then
    printf "Please provide a URL to test.\n"
    exit 1
fi

TEST_URL=$1
LOAD_COUNT=$2
MIN_COUNT=10
MAX_COUNT=100

# Validate count is integer
if [[ $LOAD_COUNT -gt $MAX_COUNT || $LOAD_COUNT -lt $MIN_COUNT ]]; then
    echo "Using default run count (10)."
    LOAD_COUNT=10
fi

# Run test
echo ""
echo "URL: ${TEST_URL}"
echo "RUN: ${LOAD_COUNT} Times"
echo ""

# Add filter to eliminate campaign source in analytics
ntimes ${LOAD_COUNT} -- curl "${TEST_URL}?utm_source=curl_benchmark" -H 'Accept-Encoding: gzip, deflate, sdch' -H 'Accept-Language: en-US,en;q=0.8,ja;q=0.6' -H 'Upgrade-Insecure-Requests: 1' -H 'User-Agent: Mozilla/5.0 (Macintosh; Intel Mac OS X 10_11_4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/50.0.2661.86 Safari/537.36 CURL_Benchmark/1.0' -H 'Connection: keep-alive' --compressed -s -o /dev/null -w  "%{time_starttransfer}\n" | percentile
